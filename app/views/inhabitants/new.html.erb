<%= error_messages_for :inhabitant %>
<% form_for :inhabitant, :url => inhabitants_path do |f| -%>

<p><label for="name">Name of your friend</label><br/>
<%= f.text_field :name %></p>

<p><label for="email">Email</label><br/>
<%= f.text_field :email %></p>

<p><label for="invitation_favs">Amount of favs:</label><br/>
<%= f.text_field :invitation_favs %></p>


<p><%= submit_tag 'Invite & Thank' %></p>
<% end -%>
